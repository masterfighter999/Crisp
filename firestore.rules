
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow reading questions if the user is authenticated.
    match /interviewQuestions/{questionId} {
      allow read: if request.auth != null;
    }

    // Allow users to create and update their own candidate data.
    match /candidates/{candidateId} {
      allow read, write: if request.auth != null && (request.auth.uid == candidateId || isInterviewer());
    }

    // Allow interviewers to manage tokens for their own company.
    match /interviewTokens/{tokenId} {
      allow read, create, delete: if request.auth != null && isInterviewer();
    }
    
    // Only admins can manage the list of allowed domains.
    match /allowedDomains/{domainId} {
    	allow read, write, delete: if request.auth != null && isAdmin();
    }
    
    function isInterviewer() {
      // Allow if the user is an admin or their email domain is in the allowed list.
      return isAdmin() || exists(/databases/$(database)/documents/allowedDomains/$(request.auth.token.email.split('@')[1]));
    }
    
    function isAdmin() {
    	return request.auth.token.email == 'swayam.internship@gmail.com';
    }
  }
}
